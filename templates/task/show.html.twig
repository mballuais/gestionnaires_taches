{# templates/task/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    <h1>Détails de la tâche</h1>

    <table class="table table-bordered">
        <tr>
            <th>Titre</th>
            <td>{{ task.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Date d'échéance</th>
            <td>{{ task.dueDate ? task.dueDate|date('d/m/Y H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Terminée</th>
            <td>{{ task.isCompleted ? 'Oui' : 'Non' }}</td>
        </tr>
    </table>

    <a href="{{ path('app_task_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning">Éditer</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
